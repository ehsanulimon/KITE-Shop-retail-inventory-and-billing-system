                Width="40" 
                Background="Transparent" 
                Foreground="White"  
                 HorizontalAlignment="Right"
                VerticalAlignment="Top"
                 Margin="0,5,45,0"
                BorderThickness="0" 
                BorderBrush="Transparent" 
                
                 Style="{StaticResource SomeButtonStyle}" Click="maxbtnClick" 
                >
                <Button.Content>
                    <Border CornerRadius="5"  
                 Height="30"
                Width="40" 
                Margin="0"
                Background="#ff9425" 
                BorderBrush="Transparent" 
                 BorderThickness="4,4,4,4" >
                        <TextBlock   Text="[  ]" 
                          
                    FontFamily="Century Gothic" 
                    FontSize="18" 
                    FontWeight="Bold"
                   TextAlignment="Center"/>
                    </Border>
                </Button.Content>
            </Button>
            <!--min Button-->

            <Button x:Name="minbtn"
                 Height="30"
                Width="40" 
                Background="Transparent" 
                Foreground="White"  
                 HorizontalAlignment="Right"
                VerticalAlignment="Top"
                 Margin="0,5,85,0"
                BorderThickness="0" 
                BorderBrush="Transparent" 
                
                 Style="{StaticResource SomeButtonStyle}" Click="minbtnClick" 
                >
                <Button.Content>
                    <Border CornerRadius="5"  
                 Height="30"
                Width="40" 
                Margin="0"
                Background="#15d6ff" 
                BorderBrush="Transparent" 
                 BorderThickness="4,4,4,4" >
                        <TextBlock   Text="-" 
                                VerticalAlignment="Center"
                    FontFamily="Century Gothic" 
                    FontSize="33" 
                    FontWeight="Bold"
                   TextAlignment="Center"/>
                    </Border>
                </Button.Content>
            </Button>

        </Grid>



        <!--sidemenu_grid-->

        <Grid  Name="sidemenu" >
            <Border x:Name="sidemenugridX" Height="300 "
                Width="150"
                Background="#FF000111"
                   
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                    Margin="25,80,0,0"
                CornerRadius="30" Opacity="0.7"
                 >

            </Border>
            <!-- MouseLeftButtonDown="StockInput_MLBD" -->
            <Label x:Name="StockInput" MouseLeftButtonDown="StockInput_MLBD" Content="Stock Input"   HorizontalAlignment="Left" Margin="20,100,0,0" VerticalAlignment="Top" Height="30" Width="140" FontSize="16"   FontFamily="Century Gothic"  FontWeight="Normal" HorizontalContentAlignment="Center"  >
                <Label.Style>
                    <Style TargetType="Label">
                        <Setter Property="Foreground" Value="#15d6ff"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#ff9425"/>

                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
            <!-- MouseLeftButtonDown="OfferFair_MLBD" -->
            <Label x:Name="OfferFair" MouseLeftButtonDown="OfferFair_MLBD" Content="Offer Fair" HorizontalAlignment="Left" Margin="20,130,0,0" VerticalAlignment="Top" Height="30" Width="140" FontSize="16"   FontFamily="Century Gothic"  FontWeight="Normal" HorizontalContentAlignment="Center">
                <Label.Style>
                    <Style TargetType="Label">
                        <Setter Property="Foreground" Value="#15d6ff"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#ff9425"/>

                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
            <!--  MouseLeftButtonDown="Category_MLBD"  -->
            <Label x:Name="Category"  MouseLeftButtonDown="Category_MLBD"  Content="Category" HorizontalAlignment="Left" Margin="20,160,0,0" VerticalAlignment="Top" Height="30" Width="140" FontSize="16"   FontFamily="Century Gothic"  FontWeight="Normal" HorizontalContentAlignment="Center">
                <Label.Style>
                    <Style TargetType="Label">
                        <Setter Property="Foreground" Value="#15d6ff"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#ff9425"/>

                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
            <!-- MouseLeftButtonDown="Billing_MLBD" -->
            <Label x:Name="Billing" MouseLeftButtonDown="Billing_MLBD" Content="Billing"    HorizontalAlignment="Left" Margin="20,190,0,0" VerticalAlignment="Top" Height="30" Width="140" FontSize="16"   FontFamily="Century Gothic"  FontWeight="Normal" HorizontalContentAlignment="Center">
                <Label.Style>
                    <Style TargetType="Label">
                        <Setter Property="Foreground" Value="#15d6ff"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#ff9425"/>

                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
            <!-- MouseLeftButtonDown="Account_MLBD"-->
            <Label x:Name="Account" MouseLeftButtonDown="Account_MLBD" Content="Account"   HorizontalAlignment="Left" Margin="20,220,0,0" VerticalAlignment="Top" Height="30" Width="140" FontSize="16"   FontFamily="Century Gothic"  FontWeight="Normal" HorizontalContentAlignment="Center">
                <Label.Style>
                    <Style TargetType="Label">
                        <Setter Property="Foreground" Value="#15d6ff"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#ff9425"/>

                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>

        
        </Grid>

        <!--   ########################        main grid  content   ########################                                    -->

        <!-- ######################## Stock input grid ########################  -->

        <Grid  Name="Stockinputgrid" >
            <Border x:Name="StockinputgridX" Height="510"
                Width="720"
                Background="Transparent"
                   
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                    Margin="180,40,0,0"
                 CornerRadius="10"
                 >
                <Grid>
                    <!-- Label=> products Name: & Textbox-->
                    <Label Content="Products Name:"  Height="30" Width="135" Margin="10,60,0,0" Foreground="White" Background="{x:Null}" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="16"  FontFamily="Century Gothic"  FontWeight="Normal" >

                    </Label>
                    <TextBox x:Name="txtb_ProductsName_Stock" Height="25" Width="220"  Margin="145,60,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"  FontSize="16" FontFamily="Calibri" BorderBrush="{x:Null}" />

                    <!-- Label=>Model No:: & Textbox-->
                    <Label Content="Model No:"  Height="30" Width="135" Margin="10,90,0,0" Foreground="White" Background="{x:Null}" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="16"  FontFamily="Century Gothic"  FontWeight="Normal" >

                    </Label>
                    <TextBox x:Name="txtb_ModelNo_Stock" Height="25" Width="220"  Margin="145,90,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"  FontSize="16" FontFamily="Calibri" BorderBrush="{x:Null}" />

                    <!-- Label=>SeriesNumber::: & Textbox-->
                    <Label Content="Series Number:"  Height="30" Width="135" Margin="10,120,0,0" Foreground="White" Background="{x:Null}" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="16"  FontFamily="Century Gothic"  FontWeight="Normal" >

                    </Label>
                    <TextBox x:Name="txtb_SeriesNumber_Stock" Height="25" Width="220"  Margin="145,120,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"  FontSize="16" FontFamily="Calibri" BorderBrush="{x:Null}" />

                    <!-- Label=>Category::: & Textbox-->
                    <Label Content="Category:"  Height="30" Width="135" Margin="10,150,0,0" Foreground="White" Background="{x:Null}" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="16"  FontFamily="Century Gothic"  FontWeight="Normal" >

                    </Label>
                    <TextBox x:Name="txtb_Category_Stock" Height="25" Width="220"  Margin="145,150,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"  FontSize="16" FontFamily="Calibri" BorderBrush="{x:Null}" />

                    <!-- Label=>price::: & Textbox-->
                    <Label Content="Price:"  Height="30" Width="135" Margin="10,180,0,0" Foreground="White" Background="{x:Null}" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="16"  FontFamily="Century Gothic"  FontWeight="Normal" >

                    </Label>
                    <TextBox x:Name="txtb_Price_Stock" Height="25" Width="220"  Margin="145,180,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"  FontSize="16" FontFamily="Calibri" BorderBrush="{x:Null}" />
                    <!-- Label=>Quantity ::: & Textbox-->
                    <Label Content="Quantity:"  Height="30" Width="135" Margin="10,210,0,0" Foreground="White" Background="{x:Null}" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="16"  FontFamily="Century Gothic"  FontWeight="Normal" >

                    </Label>
                    <TextBox x:Name="txtb_Quantity_Stock" Height="25" Width="220"  Margin="145,210,0,0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"  FontSize="16" FontFamily="Century Gothic" BorderBrush="{x:Null}" />

                    <DataGrid x:Name="Stockinput_datagridX"  Margin="0,250,20,10"
                             
                       
                         >
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                <Setter Property="BorderThickness" Value="0,0,0,5"></Setter>
                                <Setter Property="Background" Value="#FF32393A"></Setter>
                                <Setter Property="Foreground" Value="#15d6ff"></Setter>
                                <Setter Property="Margin" Value="0,0,5,5"></Setter>
                                <Setter Property="Padding" Value="0,5,0,5"></Setter>
                                <Setter Property="FontFamily" Value="Century Gothic"></Setter>
                                <Setter Property="FontWeight" Value="SemiBold"></Setter>
                                <Setter Property="FontSize" Value="12"></Setter>

                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#ff9425"></Setter>
                                        <Setter Property="Background" Value="#FF32393A"></Setter>


                                    </Trigger>
                                    <Trigger Property="IsMouseOver"  Value="True">
                                        <Setter Property="Foreground" Value="#ff9425"></Setter>
                                        <Setter Property="Background" Value="#FF32393A"></Setter>



                                    </Trigger>

                                </Style.Triggers>

                            </Style>

                        </DataGrid.Resources>
                        <!--   Style="{StaticResource  dataGrid_style}" -->
                        <DataGrid.Columns  >
                          

                        </DataGrid.Columns>

                    </DataGrid>

                    <!--ADD Button-->

                    <Button x:Name="StockinputADD"
                 Height="50"
                            
                Width="130" 
                Background="Transparent" 
                Foreground="White"  
                 HorizontalAlignment="Left"
                VerticalAlignment="Top"
                 Margin="400,60,0,0"
                BorderThickness="0" 
                BorderBrush="Transparent" 
                
                 Style="{StaticResource SomeButtonStyle}" Click="StockinputADDClick" 
                >
                        <Button.Content>
                            <Border CornerRadius="20,5,20,5"  
                 Height="50"
                Width="130" 
                Margin="0"
                Background="#15d6ff" 
                BorderBrush="Transparent" 
                 BorderThickness="4,4,4,4" >
                                <TextBlock   Text="Add" 
                                VerticalAlignment="Center"
                    FontFamily="Century Gothic" 
                    FontSize="23" 
                    FontWeight="Bold"
                   TextAlignment="Center"/>

                            </Border>
                        </Button.Content>
                    </Button>
                    <!--Update Button-->

                    <Button x:Name="StockinputUpdate"
                 Height="50"
                            
                Width="130" 
                Background="Transparent" 
                Foreground="White"  
                 HorizontalAlignment="Left"
                VerticalAlignment="Top"
                 Margin="400,120,0,0"
                BorderThickness="0" 
                BorderBrush="Transparent" 
                
                 Style="{StaticResource SomeButtonStyle}" Click="StockinputUpdateClick" 
                >
                        <Button.Content>
                            <Border CornerRadius="20,5,20,5"  
                 Height="50"
                Width="130" 
                Margin="0"
                Background="#15d6ff" 
                BorderBrush="Transparent" 
                 BorderThickness="4,4,4,4" >
                                <TextBlock   Text="Update" 
                                VerticalAlignment="Center"
                    FontFamily="Century Gothic" 
                    FontSize="23" 
                    FontWeight="Bold"
                   TextAlignment="Center"/>

                            </Border>
                        </Button.Content>
                    </Button>
                    <!--Delete Button-->

                    <Button x:Name="StockinputDelete"
                 Height="50"
                            
                Width="130" 
                Background="Transparent" 
                Foreground="White"  
                 HorizontalAlignment="Left"
                VerticalAlignment="Top"
                 Margin="400,180,0,0"
                BorderThickness="0" 
                BorderBrush="Transparent" 
                
                 Style="{StaticResource SomeButtonStyle}" Click="StockinputDeleteClick" 
                >
                        <Button.Content>
                            <Border CornerRadius="20,5,20,5"  
                 Height="50"
                Width="130" 
                Margin="0"
                Background="#15d6ff" 
                BorderBrush="Transparent" 
                 BorderThickness="4,4,4,4" >
                                <TextBlock   Text="Delete" 
                                VerticalAlignment="Center"
                    FontFamily="Century Gothic" 
                    FontSize="23" 
                    FontWeight="Bold"
                   TextAlignment="Center"/>

                            </Border>
                        </Button.Content>
                    </Button>




                </Grid>
            </Border>

        </Grid>


        <!-- ######################## Offer Fair  grid ######################## -->
        <Grid  Name="OfferFairgrid" >
            <Border x:Name="OfferFairgridX" Height="500"
                Width="700"
                Background="Transparent"
                   
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                    Margin="180,40,0,0"
                 CornerRadius="10"
                 >
                <Grid>
                    <!-- Label=> Category: & ComboBox-->
                    <Label Content="Category:"  Height="30" Width="135" Margin="10,60,0,0" Foreground="White" Background="{x:Null}" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="16"  FontFamily="Century Gothic"  FontWeight="Normal" >

                    </Label>
                    <ComboBox x:Name="cmb_box_ProductsCategory_offer" DropDownClosed="ComboBox_DropDownClosed_ProductsCategory_offer" DisplayMemberPath="Category" ItemsSource="{Binding}" Height="25" Width="220"  Margin="145,60,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top"  FontSize="16" FontFamily="Calibri" BorderBrush="{x:Null}" >
                     
                    </ComboBox>

                    <!-- Label=>products Name:: & ComboBox-->
                    <Label Content="Products Name:"  Height="30" Width="135" Margin="10,90,0,0" Foreground="White" Background="{x:Null}" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="16"  FontFamily="Century Gothic"  FontWeight="Normal" >

                    </Label>
                    <ComboBox x:Name="cmb_box_ProductsName_offer" DropDownClosed="ComboBox_DropDownClosed_ProductsName_offer"  DisplayMemberPath="Products Name" ItemsSource="{Binding}" Height="25" Width="220"  Margin="145,90,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top"  FontSize="16" FontFamily="Calibri" BorderBrush="{x:Null}" >
                
                    </ComboBox>

                    <!-- Label=>Model No::: & ListBox-->
                    <Label Content="Model No:"  Height="30" Width="135" Margin="10,120,0,0" Foreground="White" Background="{x:Null}" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="16"  FontFamily="Century Gothic"  FontWeight="Normal" >

                    </Label>
                    <ComboBox x:Name="combobox_ModelNo_offer" DropDownClosed="ComboBox_DropDownClosed_ModelNo_offer" DisplayMemberPath="Model No" ItemsSource="{Binding}" Height="25" Width="220"  Margin="145,120,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top"  FontSize="16" FontFamily="Calibri" BorderBrush="{x:Null}" >
                    
                    </ComboBox>

                    <!-- Label=>Quantity::: & TextBox & ComboBox -->
                    <Label Content="Quantity:"  Height="30" Width="135" Margin="10,150,0,0" Foreground="White" Background="{x:Null}" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="16"  FontFamily="Century Gothic"  FontWeight="Normal" >

                    </Label>
                    <TextBox x:Name="txtb_Quantity_offer" Height="25" Width="110"  Margin="145,150,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top"  FontSize="16" FontFamily="Calibri" BorderBrush="{x:Null}" >


                    </TextBox>
                    <ComboBox x:Name="cmb_Quantity_offer"  DropDownClosed="ComboBox_DropDownClosed_Quantity_offer" DisplayMemberPath="Quantity" ItemsSource="{Binding}" Height="25" Width="110"  Margin="255,150,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top"  FontSize="16" FontFamily="Calibri" BorderBrush="{x:Null}" >
                      

