<Window x:Class="kite.CentralWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kite"
        mc:Ignorable="d"
        Title="Central Window"
       Height="550 "
       Width="900"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
    
      
        Icon="img/icon.png" ResizeMode="CanResize" MaxWidth="1250" MaxHeight="720" 
       >



    

    <!--Add/create your commands-->
    <Window.CommandBindings>
        <CommandBinding x:Name="New" Command="New" Executed="NewCommandBinding_Executed"/>
        <CommandBinding x:Name="Open" Command="Open" Executed="OpenCommandBinding_Executed"/>
        <CommandBinding x:Name="Save" Command="Save" Executed="SaveCommandBinding_Executed"/>

  

    </Window.CommandBindings>


    <!-- Associate the commands with the wanted keys-->
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Control" Command="New"/>
        <KeyBinding Key="O" Modifiers="Control" Command="Open"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="Save"/>

  

    </Window.InputBindings>


    <Window.Resources>

        <!-- button style none-->
        <Style x:Key="SomeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">

                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">

                </Trigger>
                <Trigger Property="IsMouseOver"  Value="True">

                    <Setter Property="Opacity" Value="0.9" />


                </Trigger>

            </Style.Triggers>
        </Style>



        <!-- menu style     -->
        <Style TargetType="{x:Type MenuItem}" x:Key="MenuItemStyle"
                 >

            <Setter Property="BorderBrush" Value="#FF32393A"></Setter>
            <Setter Property="BorderThickness" Value="0,0,0,5"></Setter>
            <Setter Property="Background" Value="#FF32393A"></Setter>
            <Setter Property="Foreground" Value="#15d6ff"></Setter>
            <Setter Property="Margin" Value="0,0,0,0"></Setter>
            <Setter Property="Padding" Value="0,5,0,5"></Setter>
            <Setter Property="FontFamily" Value="Century Gothic"></Setter>
            <Setter Property="FontWeight" Value="SemiBold"></Setter>
            <Setter Property="FontSize" Value="12"></Setter>



            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#ff9425"></Setter>
                    <Setter Property="Background" Value="#FF32393A"></Setter>


                </Trigger>
                <Trigger Property="IsMouseOver"  Value="True">
                    <Setter Property="Foreground" Value="#ff9425"></Setter>
                    <Setter Property="Background" Value="#FF32393A"></Setter>



                </Trigger>

            </Style.Triggers>

        </Style>




    </Window.Resources>


    <Grid Height="550 "
          Width="900"
        >
        <!--// Border //-->

        <Border x:Name="gridm" Height="550 "
                Width="900"
                Background="#01002b"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                CornerRadius="20" ScrollViewer.HorizontalScrollBarVisibility="Auto" MaxWidth="1250" MaxHeight="720"
                 />
        
        <!--all-->

        <Grid>
            <!--logo grid-->
            <Grid Name="logo" 
              VerticalAlignment="Bottom"
              HorizontalAlignment="Left"
              Margin="75,0,0,40"
               Height="75"
               Width="50">
                <Image Source="img/logo.png" />
            </Grid>

            <!--menu_grid-->

            <Grid  Name="Menu">
                <Border x:Name="Menu_gridX" Height="30 "
                Width="500"
                Background="#FF32393A"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                     
                      
                    Margin="15,5,0,0"
                CornerRadius="10"
                 >

                    <Menu  Width="500"
                Background="#FF32393A"
                       
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                    Margin="15,5,0,0"
                          
                           FontSize="16"   FontFamily="Century Gothic"  FontWeight="Normal" 
                DockPanel.Dock="Top">
                        <!--file menu-->
                        <MenuItem   Width="60" Background="#FF32393A" Foreground="#ffff"  Header="_File" Cursor="Hand">

                            <MenuItem  Style="{StaticResource  MenuItemStyle}"  Name="menuNew" Header="_New" Command="New" InputGestureText="Ctrl+N">
                                <MenuItem.Icon>
                                    <Image Source="img/new-page.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Style="{StaticResource MenuItemStyle}"  Name="menuOpen" Header="_Open" Command="Open" InputGestureText="Ctrl+O">
                                <MenuItem.Icon>
                                    <Image Source="img/open-folder.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Style="{StaticResource MenuItemStyle}"  Name="menuSave" Header="_Save" Command="Save" InputGestureText="Ctrl+S">
                                <MenuItem.Icon>
                                    <Image Source="img/diskette.png" />
                                </MenuItem.Icon>
                            </MenuItem>


                        </MenuItem>
                        <!-- window menu-->
                        <MenuItem   Width="90"  Background="#FF32393A" Foreground="#ffff" Header="_Window"  Cursor="Hand">

                            <MenuItem  Style="{StaticResource  MenuItemStyle}" Click="StockInput_Grid_menu_Click" Header="_Stock Input Window" IsCheckable="True">
                                <MenuItem.Icon>
                                    <Image Source="img/stoctinputicon65px.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem  Style="{StaticResource  MenuItemStyle}" Click="OfferFair_Grid_menu_Click" Header="_Offer Fai Window">
                                <MenuItem.Icon>
                                    <Image Source="img/price-tag.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem  Style="{StaticResource  MenuItemStyle}" Click="Category_Grid_menu_Click" Header="_Category Window">
                                <MenuItem.Icon>
                                    <Image Source="img/category.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem  Style="{StaticResource  MenuItemStyle}" Click="Billing_Grid_menu_Click" Header="_Billing Window">
                                <MenuItem.Icon>
                                    <Image Source="img/invoice.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem  Style="{StaticResource  MenuItemStyle}" Click="Account_Grid_menu_Click" Header="_Account Window">
                                <MenuItem.Icon>
                                    <Image Source="img/accounts.png" />
                                </MenuItem.Icon>
                            </MenuItem>



                        </MenuItem>
                        <!-- _Setting menu-->
                        <MenuItem Width="80"  Background="#FF32393A" Foreground="#ffff" Header="_Setting"  Cursor="Hand">
                            <MenuItem  Style="{StaticResource  MenuItemStyle}" Click="userinfo_setting_click" Header="_User info Table" IsCheckable="True">
                                <MenuItem.Icon>
                                    <Image Source="img/userinfo.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <!--tan Beige Ivory-->
                            <MenuItem  Style="{StaticResource  MenuItemStyle}" Click="theme_setting1_click" Header="_MediumVioletRed Color Theme" IsCheckable="True">
                               
                            </MenuItem>
                            <MenuItem  Style="{StaticResource  MenuItemStyle}" Click="theme_setting2_click" Header="_Tan Color Theme" IsCheckable="True">
                                 
                            </MenuItem>
                            <MenuItem  Style="{StaticResource  MenuItemStyle}" Click="theme_setting3_click" Header="_Dark Color Theme" IsCheckable="True">
                                
                            </MenuItem>
                            <MenuItem  Style="{StaticResource  MenuItemStyle}" Click="theme_setting4_click" Header="_DimGray Color Theme" IsCheckable="True">
  
                            </MenuItem>
                            <MenuItem  Style="{StaticResource  MenuItemStyle}" Click="theme_setting5_click" Header="_Beige Color Theme" IsCheckable="True">

                            </MenuItem>
                            <MenuItem  Style="{StaticResource  MenuItemStyle}" Click="theme_setting6_click" Header="_Ivory Color Theme" IsCheckable="True">

                            </MenuItem>
                        </MenuItem>
                        <!-- _Help menu-->
                        <MenuItem Width="80"  Background="#FF32393A" Foreground="#ffff" Header="_Help"  Cursor="Hand">

                        </MenuItem>
                    </Menu>


                </Border>


            </Grid>

            <!--X Button-->

            <Button x:Name="Xbtn"
