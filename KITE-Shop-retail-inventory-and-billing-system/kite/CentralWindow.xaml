                Width="40" 
                Background="Transparent" 
                Foreground="White"  
                 HorizontalAlignment="Right"
                VerticalAlignment="Top"
                 Margin="0,5,5,0"
                BorderThickness="0" 
                BorderBrush="Transparent" 
                
                 Style="{StaticResource SomeButtonStyle}" Click="XbtbClick"
                >
                <Button.Content>
                    <Border CornerRadius="5"  
                 Height="30"
                Width="40" 
                Margin="0"
                Background="#f10000" 
                BorderBrush="Transparent" 
                 BorderThickness="4,4,4,4" >
                        <TextBlock   Text="x" 
                                VerticalAlignment="Bottom"
                    FontFamily="Century Gothic" 
                    FontSize="23" 
                    FontWeight="Bold"
                   TextAlignment="Center"/>
                    </Border>
                </Button.Content>
            </Button>

            <!--Max Button-->

            <Button x:Name="maxbtn"
